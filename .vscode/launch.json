    "version": "0.2.0",
    "configurations": [
        {
            "name": "STM32F407G-DISC1",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "openocd",
            "serverpath": "/usr/bin/openocd",
            "executable": "${workspaceFolder}/tmp/STM32F407G-DISC1/${workspaceFolderBasename}.elf",
            "objdumpPath": "/usr/bin/arm-none-eabi-objdump",
            "gdbPath": "/usr/bin/gdb-multiarch",
            "cwd": "${workspaceFolder}",
            "configFiles": ["${workspaceFolder}/openocd.cfg"],
            "postRestartCommands": [
                // "b Reset_Handler",
                // "b SystemInit",
                "b main",
                "b SystemClock_Config",
                "b MX_GPIO_Init",
                "monitor reset halt"
                // "c"
            ]
        },
        {
            "name": "STM32L496G-DISCO",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "openocd",
            "serverpath": "/usr/bin/openocd",
            "executable": "${workspaceFolder}/tmp/STM32L496G-DISCO/${workspaceFolderBasename}.elf",
            "objdumpPath": "/usr/bin/arm-none-eabi-objdump",
            "gdbPath": "/usr/bin/gdb-multiarch",
            "cwd": "${workspaceFolder}",
            "configFiles": ["${workspaceFolder}/openocd.cfg"],
            "postRestartCommands": [
                "b Reset_Handler",
                "b SystemInit",
                "b main",
                "interrupt",
                "c",
                "monitor reset halt"
            ]
        },
        {
            "name": "espruino",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "openocd",
            "serverpath": "/usr/bin/openocd",
            "executable": "${workspaceFolder}/ref/Espruino/bin/espruino_2v24_stm32f4discovery.elf",
            "objdumpPath": "/usr/bin/arm-none-eabi-objdump",
            "gdbPath": "/usr/bin/gdb-multiarch",
            "cwd": "${workspaceFolder}/ref/Espruino",
            "configFiles": ["${workspaceFolder}/openocd.cfg"],
            "postRestartCommands": [
                "b Reset_Handler",
                "b SystemInit",
                "b main",
                "interrupt",
                "c",
                "monitor reset halt"
            ]
        }
    ]
}
