    "version": "0.2.0",
    "configurations": [
        {
            "name": "QEMU",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/target/thumbv7em-none-eabihf/debug/${workspaceFolderBasename}",
            "cwd": "${workspaceRoot}",
            "stopAtEntry": false,
            "MIMode": "gdb",
            "miDebuggerPath": "gdb-multiarch",
            "miDebuggerArgs": "--silent",
            "miDebuggerServerAddress": ":1234",
            "useExtendedRemote": true,
            // "serverLaunchTimeout": 300,
            // "debugServerPath": "qemu-system-arm",
            // "debugServerArgs": "-M netduinoplus2 -cpu cortex-m4 -nographic -S -s",
            "postRemoteConnectCommands": [
                {"text": "load"},
                {"text": "b *0x8000000"},
                {"text": "jump *0x8000000"},
                // {"text": "b SystemInit"},
                // {"text": "b SystemClock_Config"},
                // {"text": "c"},
            ]
        },
        {
            // https://t.me/proembedded/645181
            "name": "F4DISCO",
            "type": "cppdbg",
            "request": "launch",
            // "program": "${workspaceRoot}/tmp/F4DISCO/${workspaceFolderBasename}.elf",
            "program": "${workspaceRoot}/bin/F4DISCO_2v22.elf",
            "cwd": "${workspaceRoot}",
            // "preLaunchTask": "${defaultBuildTask}",
            "stopAtEntry": false,
            "MIMode": "gdb",
            "miDebuggerPath": "gdb-multiarch",
            "miDebuggerArgs": "--silent",
            "miDebuggerServerAddress": "localhost:3333",
            "useExtendedRemote": true,
            "serverLaunchTimeout": 3000,
            // "debugServerPath": "openocd",
            // "debugServerArgs": "-f ${workspaceRoot}/hw/F4DISCO/F4DISCO.openocd",
            // "serverStarted": "connections",
            "postRemoteConnectCommands": [
                {"text": "load"},
                {"text": "b Reset_Handler"},
                {"text": "b SystemInit"},
                {"text": "b SystemClock_Config"},
                {"text": "b MX_GPIO_Init"},
                {"text": "b main"},
                {"text": "monitor reset halt"}
            ],
            "launchCompleteCommand": "exec-continue"
        },
        {
            "name": "STM32F407G-DISC1",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "openocd",
            "serverpath": "/usr/bin/openocd",
            "executable": "${workspaceFolder}/tmp/STM32F407G-DISC1/${workspaceFolderBasename}.elf",
            "objdumpPath": "/usr/bin/arm-none-eabi-objdump",
            "gdbPath": "/usr/bin/gdb-multiarch",
            "cwd": "${workspaceFolder}",
            "configFiles": ["${workspaceFolder}/openocd.cfg"],
            "postRestartCommands": [
                // "b Reset_Handler",
                // "b SystemInit",
                "b main",
                "b SystemClock_Config",
                "b MX_GPIO_Init",
                "monitor reset halt"
                // "c"
            ]
        },
        {
            "name": "STM32L496G-DISCO",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "openocd",
            "serverpath": "/usr/bin/openocd",
            "executable": "${workspaceFolder}/tmp/STM32L496G-DISCO/${workspaceFolderBasename}.elf",
            "objdumpPath": "/usr/bin/arm-none-eabi-objdump",
            "gdbPath": "/usr/bin/gdb-multiarch",
            "cwd": "${workspaceFolder}",
            "configFiles": ["${workspaceFolder}/openocd.cfg"],
            "postRestartCommands": [
                "b Reset_Handler",
                "b SystemInit",
                "b main",
                "interrupt",
                "c",
                "monitor reset halt"
            ]
        },
        {
            "name": "espruino",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "openocd",
            "serverpath": "/usr/bin/openocd",
            "executable": "${workspaceFolder}/ref/Espruino/bin/espruino_2v24_stm32f4discovery.elf",
            "objdumpPath": "/usr/bin/arm-none-eabi-objdump",
            "gdbPath": "/usr/bin/gdb-multiarch",
            "cwd": "${workspaceFolder}/ref/Espruino",
            "configFiles": ["${workspaceFolder}/openocd.cfg"],
            "postRestartCommands": [
                "b Reset_Handler",
                "b SystemInit",
                "b main",
                "interrupt",
                "c",
                "monitor reset halt"
            ]
        }
    ]
}
