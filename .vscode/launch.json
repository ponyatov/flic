    "version": "0.2.0",
    "configurations": [
        {
            "name": "arm-none-eabi",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "openocd",
            "serverpath": "/usr/bin/openocd",
            "executable": "${workspaceFolder}/tmp/STM32F407G-DISC1/${workspaceFolderBasename}.elf",
            "gdbPath": "/usr/bin/gdb-multiarch",
            "cwd": "${workspaceFolder}",
            "configFiles": ["${workspaceFolder}/openocd.cfg"],
            "postRestartCommands": [
                "b Reset_Handler",
                "b SystemInit",
                "b main",
                "monitor reset halt"
                // "c"
            ]
        },
        {
            "name": "STM32F407G-DISC1",
            "type": "gdb",
            "request": "attach",
            "executable": "${workspaceFolder}/tmp/STM32F407G-DISC1/${workspaceFolderBasename}.elf",
            "target": ":12345",
            "remote": true,
            "gdbpath": "/usr/bin/gdb-multiarch",
            "cwd": "${workspaceFolder}",
            // "stopAtConnect": true,
            // "preLaunchTask": "cmake: build"
            // "debugger_args": ["-x ${workspaceFolder}/.gdbinit"],
            "autorun": [
                "b Reset_Handler"
                ,"b SystemInit"
                ,"b main"
                // ,"monitor reset halt"
                ,"c"
            ]
            // "showDevDebugOutput": true
        }
    ]
}
